<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cook.kotlin.cookkotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />




    <application
        android:name="com.cook.kotlin.application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Activity.Toolbar.Dark">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WebViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".comic.ComicListActivity"
            android:launchMode="singleTop"
            android:theme="@style/Activity.Toolbar.Dark" />
        <activity
            android:name=".comic.ComicActivity"
            android:parentActivityName="com.cook.kotlin.cookkotlin.comic.ComicListActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cook.kotlin.cookkotlin.comic.ComicListActivity" />
        </activity>
        <activity
            android:name=".recent.RecentComicActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".news.WxnewsActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.cook.kotlin.utils.glide.MGlideModule"
            android:value="MGlideModule" />

        <activity android:name=".about.AboutActivity" />

        <activity android:name=".wall.LiveWallpagerActivity" />
        <activity android:name=".test.GridTestActivity" />


        <!-- 配置实时壁纸Service -->
        <service android:label="@string/wall"
            android:name="com.cook.kotlin.service.CameraLiveWallpager"
            android:permission="android.permission.BIND_WALLPAPER">
            <!-- 为实时壁纸配置intent-filter -->
            <intent-filter>
                <action  android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <!-- 为实时壁纸配置meta-data -->
            <meta-data android:name="android.service.wallpaper"
                android:resource="@xml/wallpager" />
        </service>

        <!-- 配置实时壁纸Service -->
        <service android:label="@string/wall_live"
            android:name="com.cook.kotlin.service.VideoLiveWallpager"
            android:permission="android.permission.BIND_WALLPAPER">
            <!-- 为实时壁纸配置intent-filter -->
            <intent-filter>
                <action  android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <!-- 为实时壁纸配置meta-data -->
            <meta-data android:name="android.service.wallpaper"
                android:resource="@xml/wallpager" />
        </service>

    </application>

</manifest>