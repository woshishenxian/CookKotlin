<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cook.kotlin.cookkotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.cook.kotlin.application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Activity.Toolbar.Dark">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WebViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".comic.ComicListActivity"
            android:label="@string/title_activity_comic_list"
            android:theme="@style/Activity.Toolbar.Dark" />
        <activity
            android:name=".comic.ComicActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.cook.kotlin.cookkotlin.util.glide.MGlideModule"
            android:value="MGlideModule" />

        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/Activity.Toolbar.Dark" />
        <activity android:name=".recent.RecentComicActivity"></activity>
    </application>

</manifest>