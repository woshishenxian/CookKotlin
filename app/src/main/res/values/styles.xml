<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!-- 填充屏幕 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>

        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Toolbar.Base" parent="Base.Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">@dimen/toolbar_height</item>
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="overlapAnchor">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/toolbar_text_color</item>
        <item name="android:background">@color/toolbar_color</item>
        <item name="background">@color/toolbar_color</item>
    </style>

    <style name="Activity.Toolbar.Dark" parent="AppTheme">
        <item name="toolbarStyle">@style/Toolbar.Base</item>
    </style>


    <style name="Activity.Toolbar.Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Activity.Toolbar.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
